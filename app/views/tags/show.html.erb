<h3><%= @tag.title %></h3>

<% if flash[:success] %>
  <div class="alert alert-success" role="alert">
    <strong>Success:</strong> <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-info" role="alert">
    <strong>Info:</strong> <%= flash[:notice] %>
  </div>
<% end %>

<div class="margin-20"><%= link_to (image_tag @tag.image_header.variant(resize: "700x400")), @tag.image_header, target: :_blank  %></div>

<p><%= @tag.description %></p>

<% if current_user %>
  <div class="margin-20"><%= link_to "Add a Blog", new_destination_path, class: "btn btn-primary" %></div>
<% end %>

<% @destinations.each do |dest| %>
  <div class="blog">
    <h4><%= dest.blog_title %></h4>
    
    <% if dest.blog_image.attached? %>
      <%= link_to (image_tag dest.blog_image.variant(resize: "700x400")), dest, target: :_blank %>
    <% end %>
    
    <p><%= simple_format(dest.blog_body) %></p>
    
    <% if current_user %>
      <%= link_to "Edit", edit_destination_path(dest) %> | 
      <%= link_to "Delete", destination_path(dest), method: "delete", data: {confirm: "Are you sure you want to delete #{dest.blog_title} blog?"} %>
    <% end %>
    
    <% if current_user %>
      <ul>
        <li><span class="signature">Created by: <%= dest.created_by %></span></li>
        <li><span class="signature">Last updated by: <%= dest.last_update_by %></span></li>
      </ul>
    <% end %>
  </div>
<% end %>

<h4>Featured Photos<h4>
<% @tag.image_uploads.each do |image| %>
  <%= link_to (image_tag image.variant(resize: "500x200")), image, target: :_blank %>
<% end %>
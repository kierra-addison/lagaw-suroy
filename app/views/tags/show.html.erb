<div class="row">

  <div class="col-md-8">
  
    <h3><%= @tag.title %></h3>

    <% if flash[:success] %>
      <div class="alert alert-success alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Success:</strong> <%= flash[:success] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-info alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Info:</strong> <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="margin-20">
      <%= image_tag @tag.image_header.variant(resize: "600x600"), class: "img-responsive myImg" %>
    </div>

    <p><%= simple_format(@tag.description) %></p>

    <% @destinations.each do |dest| %>

      <div class="blog">
      
        <h4><%= dest.blog_title %></h4>
        
        <% if dest.blog_image.attached? %>
          <%= image_tag dest.blog_image.variant(resize: "600x600"), class: "img-responsive myImg" %>
        <% end %>
        
        <p><%= simple_format(dest.blog_body) %></p>
        
        <% if current_user %>
          <%= link_to "Edit", edit_destination_path(dest) %> | 
          <%= link_to "Delete", destination_path(dest), method: "delete", data: {confirm: "Are you sure you want to delete #{dest.blog_title} blog?"} %>
        <% end %>
        
        <% if current_user %>
          <ul>
            <li><span class="signature"><em>Created by: <%= dest.created_by %></em></span></li>
            <li><span class="signature"><em>Last updated by: <%= dest.last_update_by %></em></span></li>
          </ul>
        <% end %>
        
      </div>
      
    <% end %>

    <% unless @tag.map_embed.empty? %>
      <div class="embed-responsive embed-responsive-4by3">
        <iframe src="<%= @tag.map_embed %>" width="800" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
      </div>
    <% end %>
      
    <h3>Featured Photos<h3>

    <div class="featured">
      <% @tag.image_uploads.each do |image| %>
        <%= image_tag image.variant(resize: "600x600"), class: "myImg" %>
      <% end %>
    </div>

    <!-- The Modal -->
      <div id="myModal" class="modal">
        <!-- The Close Button -->
        <span class="modal-close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>
        <!-- Modal Content (The Image) -->
       <img class="modal-content" id="img01">        
        <!-- Modal Caption (Image Text) -->
        <div id="caption"></div>
      </div>

  </div>
  
  <!--
  <div class="col-md-4">Ads Here</div>
  -->

</div>

<h2>Destinations</h2>

<p><%= link_to button_tag("Add a Destination Tag"), new_tag_path %></p>

<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<% @tags.each do |tag| %>
  <div class="container">
    <h3><%= tag.title %></h3>
    <%= link_to (image_tag tag.image_header.variant(resize: "700x400")), tag.image_header, target: :_blank %>
    <p><%= tag.description %></p>
    <p><%= link_to "Edit", edit_tag_path(tag) %> | <%= link_to "Show More", tag_path(tag) %></p>
  </div>
<% end %>
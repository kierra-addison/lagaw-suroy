<h2>Destinations</h2>

<% if flash[:search] %>
  <div class="margin-20">
    <strong><%= flash[:search] %></strong>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-info alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Info:</strong> <%= flash[:notice] %>
  </div>
<% end %>

<% if @tags.present? %>

  <div class="row">
    <% @tags.each do |tag| %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">

          <%= image_tag tag.image_header.variant(resize: "600x600") %>

          <div class="caption">

            <h3><%= tag.title %></h3>
            <p><%= tag.description %></p>

            <div class="margin-20">
              <% if current_user %>

                <%= link_to "Edit", edit_tag_path(tag), class: "btn btn-primary" %>
                <%= link_to "", tag_path(tag), method: "delete", data: { confirm: "Are you sure you want to delete #{tag.title} destination tag?" }, class: "remove far fa-times-circle fa-2x" %>

              <% end %>
              
              <%= link_to "Show More", tag_path(tag), class: "btn btn-default" %>

            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>

<% else %>

  <h4>No Results Found</h4>

<% end %>


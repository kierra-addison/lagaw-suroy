<h2>Destinations</h2>

<% if flash[:search] %>
  <div class="margin-20">
    <strong><%= flash[:search] %></strong>
  </div>
<% end %>

<% if @tags.present? %>
  <div class="row">
    <% @tags.each do |tag| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to (image_tag tag.image_header.variant(resize: "600x600")), tag.image_header, target: :_blank %>
          <div class="caption">
            <h3><%= tag.title %></h3>
            <p><%= tag.description %></p>
            <div class="margin-20">
              <% if current_user %>
                <%= link_to "Edit", edit_tag_path(tag), class: "btn btn-primary" %>
              <% end %>
              
              <%= link_to "Show More", tag_path(tag), class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <h4>No Results Found</h4>
<% end %>


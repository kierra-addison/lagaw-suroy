<% content_for :title, "Edit Category" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><a href="#">Edit Category</a></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">  
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'shared/errors', obj: @category %>

        <%= form_with model: @category, url: {action: "update"}, html: {class: ""}, local: true do |f| %>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1"><strong>Category Name</strong></span>
              <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
            </div>
          </div>
          
          <%= f.button "Update", class: "btn btn-primary", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i> Updating..."} %>
          <%= link_to "Cancel", categories_path, data: {confirm: "Are you sure you want to cancel?"}, class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
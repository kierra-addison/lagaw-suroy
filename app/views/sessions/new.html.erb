<% content_for :title, "Layaw Suroy - Admin log in" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul class="nav nav-tabs nav-justified">
      <li role="presentation" class="active"><a href="#"><h3>Log in</h3></a></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">

        <%= render 'shared/flash' if flash_list %>

        <%= form_with scope: :session, url: admin_path, html: {class: "login-form"}, local: true do |f| %>
          
          <div class="form-group">
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="basic-addon1"><i class="fas fa-at"></i></span>
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="basic-addon1"><i class="fas fa-key"></i></span>
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
          </div>
          
          <%= f.button "Log in", class: "btn btn-primary", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i> Logging in..."} %>
        
        <% end %>

      </div>
    </div>
  </div>
</div>

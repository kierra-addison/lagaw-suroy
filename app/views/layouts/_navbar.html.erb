        <%= button_tag(type: "submit", class: "btn btn-default") do %>
            <i class="glyphicon glyphicon-search"></i>
        <% end %>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to current_user.email, user_account_path(id: current_user) %></li>

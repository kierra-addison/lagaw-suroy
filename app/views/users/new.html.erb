<% content_for :title, "Add User" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/errors', obj: @user %>
    
    <ul class="nav nav-tabs">
      <li role="presentation"><a href="<%= manage_path %>">Manage Users</a></li>
      <li role="presentation" class="active"><a href="#">Add User</a></li>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">    
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_with scope: :user, url: signup_path, html: {class: "signup-form"}, local: true do |f| %>
          <div class="form-group">
            <%= f.text_field :first_name, class: "form-control", :placeholder => "First Name" %>
          </div>
          
          <div class="form-group">
            <%= f.text_field :last_name, class: "form-control", :placeholder => "Last Name" %>
          </div>
          
          <div class="form-group">
            <%= f.email_field :email, class: "form-control", :placeholder => "Email" %>
          </div>
          
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", :placeholder => "Password" %>
          </div>
          
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control", :placeholder => "Confirm Password" %>
          </div>
          
          <div class="form-group">
            <strong>ROLE: </strong>
            <%= f.select(:role, options_for_select([['Please select', ""], 
                                                      ["Admin", "admin"], 
                                                      ["Editor", "editor"]]), {}, {class: "btn btn-default dropdown-toggle"})  %>
          </div>
          
          <div class="btn-margin">
            <%= f.button "Add User", class: "btn btn-primary", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i> Adding..."} %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
  
 
  



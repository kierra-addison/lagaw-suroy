<h3>Change Password for <%= @user.first_name %> <%= @user.last_name %></h3>

<% flash.each do |name, msg| -%>
  <p><%= content_tag :div, msg, class: name %></p>
<% end -%>

<%= form_for(@user) do |f| %>
  <ul>
    <li><p>Old Password <%= password_field_tag :current_password, params[:current_password] %></p></li>
    <li><p>New Password <%= f.password_field :password %></p></li>
    <li><p>Confirm New Password <%= f.password_field :password_confirmation %></p></li>
    <li><p><%= f.submit "Update" %> <%= link_to button_tag("Cancel"), user_account_path(id: current_user), data: {confirm: "Are you sure you want to cancel?"} %><p></li>
  </ul>
<% end %>

<p>
  <% if @user.errors.any? %>
    <div class="error">Errors:</div>
    <% @user.errors.full_messages.each do |message| %>
      <div class="error-m"><%= message %></div>
    <% end %>
  <% end %>
</p>